
<h1>Bookings#show</h1>
 <div class="container mt-5">
    <p>Bookings#show</p>
    <h1 class="text-center">Your trip is confirmed</h1>
    <br>
    <p class="text-center">Flight details</p>
  <div class="card-container-2">
    <div class="card u-clearfix">
      <div class="card-body">
        <span class="card-number card-circle subtle">01</span>
        <span class="card-author subtle"> </span>
        <h2 class="card-title">Congratulations!</h2>
        <span class="card-description subtle"><p>Enjoy your flight on <%= @trip.jet_name %> with Jetsetter, please review and accept the following terms of use. A confirmation email has been sent, please follow instructions.</p></span>
       <p><%= @trip.start_city %> -> <%= @trip.end_city %></p>
        <div><%= link_to 'Go back', trips_path, id: 'btn-navbar' %></div>
      </div>
    </div>

    <div class="card-shadow"></div>
  <div id="map" style="width: 620px; height: 300px;" data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="pk.eyJ1IjoidGl0cyIsImEiOiJjazM4eHMzZ2IwNnBhM2RrcTRqcXNsemMzIn0.AUIXIPVA3rDDaINnb2S2CQ">
  </div>
  </div>
</div>

<%= simple_form_for [@trip, @booking] do |f| %>
  <%= f.input :review %>
  <%= f.submit "add a review", class: "btn btn-success" %>
<% end %>

