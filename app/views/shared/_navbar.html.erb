<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <span class="nav-jetsetter" ><%= link_to trips_path, class: "navbar-brand" do %>
    <%= image_tag "logo_jetsetter.png" %>
  <% end %></span>
    <%= form_tag trips_path, class:"form-inline my-2 my-lg-0", id:"search_field", method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    type: "search",
    placeholder: "Enter a city" %>
<% end %>



  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to '<i class="fas fa-plus"></i> Add a trip'.html_safe, new_trip_path, id: "btn-navbar"%>

      </li>
      <li class="nav-item dropdown">
        <% if current_user.present? %>
          <%#= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false if current_user.photo.attached? %>
        <% else %>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path , class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
