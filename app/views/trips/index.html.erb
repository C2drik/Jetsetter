<div class="container mt-3">
  <p>Trips#index</p>
  <h1>Book private jets with Jetsetter</h1>
  <div class="card-container">
    <% @trips.each do |trip| %>
      <div class="card-product">

        <div class="card-product-infos">
          <h2><%= trip.start_city %> -> <%= trip.end_city %></h2>
          <p><%= trip.start_date.strftime("%d/%m/%Y") %> - <%= trip.end_date.strftime("%d/%m/%Y") %></p>
          <p><%= trip.duration %></p>
          <%= link_to 'Flight details', trip_path(trip), class: 'btn btn-ghost' %>
        </div>
      </div>
    <%end %>
  </div>
</div>

