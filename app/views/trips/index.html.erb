<h1 class="text-center m-5">Our available flights</h1>
  <div class="container-card mb-5">
    <% @trips.each do |trip| %>
      <%= link_to trip_path(trip) do %>
          <div class="mycard">
            <% bg = (trip.photo.attached?) ? cl_image_path(trip.photo.key) : "" %>
            <div class="card mb-3" style="background-image: linear-gradient(-225deg, rgba(30,30,30,0.6) 30%, rgba(46,46,46,0.5) 80%), url(<%= bg %>)">
              <span class="card-category"><p><%= trip.jet_name %></p></span>
              <div class="card-description">
                <h3><%= trip.city %></h3>
                <p><%= trip.start_city %> -> <%= trip.end_city %> | <%= trip.duration %> H</p>
                <p></p>
              </div>
            </div>
          </div>
      <%end %>
    <% end %>
  </div>
